<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Winner">
    <View
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/winner"
        />
    <RelativeLayout
        android:id="@+id/toolBarRL"
        android:layout_width="match_parent"
        android:background="@drawable/shape_toolbar02"
        android:layout_height="?actionBarSize">
        <ImageButton
            android:id="@+id/BackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:background="@drawable/tab_background_unselected"
            android:src="@drawable/ic_back_white"
            />




        <ImageButton
            android:id="@+id/profileeditBtn"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="350dp"
            android:layout_marginEnd="1dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_white" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rect01"
        android:layout_marginTop="180dp"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilrIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@color/white"
        android:src="@drawable/ic_person_gray"
        />
    <TextView
        android:id="@+id/namev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilrIv"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Full name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/additionalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namev"
        android:layout_marginStart="146dp"
        android:layout_marginTop="24dp"
        android:text="قارئ الشَهر"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/nor"
        android:layout_width="474dp"
        android:layout_height="650dp"
        android:layout_below="@id/namev"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/nor"


        />


</RelativeLayout>